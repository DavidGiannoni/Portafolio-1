<div class="container" style="margin:50px auto">
    <div class="row">
        <div class="col">
            <h3 class="text-right">Hola {{ usuario }} !🔓  <a href="/admin/login/logout"
            class="btn btn-sm btn-danger">Cerrar sesion<i
                class="fa fa-sign-out"></i></a></h3>
                <br></br>
        </div>
        <div class="row">
            <div class="col-5">
            <h2>📰 - Lista de Novedades</h2>
            <br></br>
        </div>
        <div class="col-7 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success" ><i class="fa fa-plus"></i>📃 Nuevo</a>
        </div>
    </div>
</div>
<div class ="row">
    <div class="col">
        <table class="table">
            <thead>
                <tr class="table-dark">
                    <th scope="col">📍 Nro.</th>
                    <th scope="col">🧾 Titulo</th>
                    <th scope="col">🧾 Imagen</th>
                    <th scope='col' class="text-end">⚙️ Acciones</th>

                </tr>
            </thead>
            <tbody>
                {{#each novedades}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{titulo}}</td>
                    <td>{{{imagen}}}</td>
                    <td class="text-end"> 
                        <a href="/admin/novedades/modificar/{{id}}" title="Editar" class="btn btn-secondary">
                        <i class="fas fa-pencil-alt"></i></a>
                        <a href="/admin/novedades/eliminar/{{id}}" title="Eliminar" class="btn btn-secondary">
                        <i class="fa fa-trash-alt" aria-hidden="true"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>